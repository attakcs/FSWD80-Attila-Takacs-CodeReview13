{% extends 'base.html.twig' %}

{% block body %}

<h2 class="page-header">Events</h2>

<div class="row">

{% for event in events %}
    
    <div class="d-inline m-3 mx-auto">
      <div class="card" style="width: 18rem;">
        <img src="{{event.eventImage}}" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title">{{event.eventName}}</h5>
          <p class="card-text">{{event.eventDate|date('F j, Y, g:i a')}}</p>
          <a href="/event/details/{{event.id}}" class="btn btn-primary">See more</a>
        </div>
      </div>
    </div>
    
{% endfor %}

</div>

{% endblock %}